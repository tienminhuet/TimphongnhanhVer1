@model mvcToDoList.Models.Todos

@{
    ViewBag.Title = "Create";
}
<style>
    /*.form-group{
        width:30%;
        margin:40%;
    }*/
</style>
<h2 style="color:white"><b>Create Profile </b></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="color:white;padding-left:40%">
        <h4>Aministrator</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Admin Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, "Enjoy Date ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Attributes, "Develop or Investor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Attributes, new SelectList(
                  new List<Object>{
                        new { value = "Develop" , text = "Develop"  },
                   new { value = "Investor" , text = "Investor" },

                    },
                  "value",
                  "text",
                   1))

                @Html.ValidationMessageFor(model => model.Attributes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Priority, "Position", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Priority, new SelectList(
                    new List<Object>{
                        new { value = "Big Boss" , text = "Big Boss"  },
                   new { value = "Administrator" , text = "Administrator" },
                   new { value = "Manager" , text = "Manager" }
                      },
                    "value",
                    "text",
                     2))

                @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
